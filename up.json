{
  "name": "gruffapi",
  "profile": "gruff",
  "regions": ["us-west-2"],
  "lambda": {
    "memory": 128
  },
  "environment": {
    "GRUFF_ENV": "DEVELOPMENT",
    "GRUFF_NAME": "GRUFF"
  },
  "cors": {
    "enable": true
  },
  "hooks": {
    "build": "CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o server `ls *.go | grep -v _test.go`",
    "clean": "rm server"
  }
}